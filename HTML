        let timeLeft = 300;
        const timerElem = document.getElementById('timer');
        setInterval(() => {
            if (timeLeft <= 0) return;
            timeLeft--;
            let mins = Math.floor(timeLeft / 60);
            let secs = timeLeft % 60;
            timerElem.innerText = `0${mins}:${secs < 10 ? '0' + secs : secs}`;
        }, 1000);

        // ‡¶™‡ßç‡¶∞‡ßç‡¶Ø‡¶æ‡¶ô‡ßç‡¶ï ‡¶ü‡ßç‡¶∞‡¶ø‡¶ó‡¶æ‡¶∞
